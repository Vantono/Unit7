<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BiometricAttendanceApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BiometricAttendanceApp.Views">

    <!-- Signup Page -->
    <ShellContent
        Title="Signup"
        ContentTemplate="{DataTemplate views:SignupPage}"
        Route="SignupPage" />

    <!-- Signin Page -->
    <ShellContent
        Title="Signin"
        ContentTemplate="{DataTemplate views:SigninPage}"
        Route="Signin" />

    <!-- Home Page (το νέο που λείπει και πρέπει να προστεθεί!) -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" />

</Shell>
